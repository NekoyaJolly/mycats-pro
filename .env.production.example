# Production Environment Configuration Example
# Copy this file to .env.production and fill in actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/mycats_production"

# JWT Configuration
JWT_SECRET="your-production-jwt-secret-256-bit-minimum"
JWT_EXPIRES_IN="1h"

# API Configuration
NODE_ENV=production
PORT=3004

# CORS Configuration
CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Logging Configuration
LOG_LEVEL=warn

# Health Check
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_MEMORY_THRESHOLD=0.9

# Session Configuration
SESSION_SECRET="your-session-secret-here"

# Redis Configuration (if using Redis for caching/sessions)
# REDIS_URL="redis://localhost:6379"

# Mail Configuration (if using notifications)
# MAIL_HOST=smtp.example.com
# MAIL_PORT=587
# MAIL_USER=your-email@example.com
# MAIL_PASS=your-password

# Object Storage (if using file uploads)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name